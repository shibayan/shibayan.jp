---
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-md border-b border-gray-100">
  <nav class="max-w-4xl mx-auto px-6 h-14 flex items-center justify-between">
    <a href="/" class="text-lg font-semibold tracking-tight text-gray-900 hover:text-gray-600 transition-colors">
      shibayan
    </a>
    <div class="flex items-center gap-6 text-sm">
      <a
        href="/slides/"
        class:list={[
          'transition-colors',
          currentPath === '/slides/' ? 'text-gray-900 font-medium' : 'text-gray-500 hover:text-gray-900',
        ]}
      >
        Presentations
      </a>
      <a
        href="https://github.com/sponsors/shibayan"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-500 hover:text-gray-900 transition-colors"
      >
        Sponsor
      </a>
    </div>
  </nav>
</header>
